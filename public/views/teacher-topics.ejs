<%- include('partials/teacher-main-header') %>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1>Topics of The course and Upload</h1>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">topic</th>
              <th scope="col">description</th>
              <th scope="col">file</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% topics.forEach(topic => { %>
                <tr>
                    <td><%= topic.id %></td>
                    <td><%= topic.topic %></td>
                    <td><%= topic.description %></td>
                    <td><a href="../<%=topic.file%>"><%=topic.topic%></a></td>
                    <td><a href="/Teacher/delete/<%=topic.id%>"><button class="btn btn-danger">delete</button></a></td>
                </tr>
                <% }) %>
          </tbody>
        </table>
      </div>
<form action="/Teacher/upload" method="post" style="width: 40%;" enctype="multipart/form-data">
    <div class="form-group">
        <input style="margin: 10px;"  type="text" name="topic" class="form-control" id="" aria-describedby="emailHelp" placeholder="Enter topic">
    </div>
    <div class="form-group">
      <input style="margin: 10px;" name="description" type="description" class="form-control" id="" aria-describedby="emailHelp" placeholder="Enter description">
    <input type="hidden" name="course_id" value="<%= c_id %>" id="">
    </div>
    <div class="form-group" style="width: 100%;margin: 10px;">
        <input class="form-control"type="file" name="file" id="">
    </div>
    

    <button style="margin: 10px;"  type="submit" class="btn btn-primary">Submit</button>
  </form>
</main>
<%- include('partials/main-footer') %>